    class animal(val especie: String,val genero: Char, val habitat: String,
                val dieta:String, val idade:Int, val voa: Boolean){
     
      
        fun Atacar(bravo: Boolean){
            if(bravo == true){
                println("Animal atacando")
            }else{
                println("Animal de boa, suavao")
            }
        }
            
            
    fun (raivoso: Boolean){
            if(raivoso == true){
                println("Animal atacando")
            }
    }
    }
